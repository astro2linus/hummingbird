<div id="report_panel">
<%= link_to "Create Report", new_project_report_path(@project), class: "btn btn-primary pull-right" %>
<%= link_to "Delete Selected", new_project_report_path(@project), class: "btn btn-danger pull-right" %>
</div>

<div id="report_list">
	<table class="table table-striped">
		<tr>
			<th>
	    	<input type="checkbox">
	    </th>
			<th>Report Title</th>
			<th>Updated at</th>
		</tr>
	  <% @reports.each do |r| %>
			<tr>
				<td>
	      	<input type="checkbox">
	      </td>
				<td><%= link_to r.title, project_report_path(@project, r) %></td>
				<td><%= time_ago_in_words(r.updated_at) %></td>
			</tr>
		<% end %>
	</table>
</div>




